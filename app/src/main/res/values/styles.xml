<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.blueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorBlue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorBlueFlash</item>
    </style>

    <style name="AppTheme.yellowButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorYellow</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorYellowFlash</item>
    </style>

    <style name="AppTheme.greenButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorGreen</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorGreenFlash</item>
    </style>

    <style name="AppTheme.redButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorRed</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorRedFlash</item>
    </style>



</resources>
